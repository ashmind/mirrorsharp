{
    "name": "mirrorsharp",
    "version": "1.0.4",
    "type": "module",
    "description": "A code editor `<textarea>` for .NET.",
    "authors": [
        "Andrey Shchekin (https://github.com/ashmind)"
    ],
    "license": "MIT",
    "main": "mirrorsharp.js",
    "types": "mirrorsharp.d.ts",
    "homepage": "https://github.com/ashmind/mirrorsharp",
    "bugs": "https://github.com/ashmind/mirrorsharp/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ashmind/mirrorsharp.git"
    },
    "scripts": {
        "build": "node --experimental-modules ./build.js",
        "watch": "node --experimental-modules ./build.js --watch",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/tests/**/*.tests.ts"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/ts/**/*.ts",
            "**/tests/**/*.tests.ts"
        ]
    },
    "dependencies": {
        "@types/codemirror": "0.0.87",
        "codemirror": "^5.18.2",
        "codemirror-addon-infotip": "^1.1.0",
        "codemirror-addon-lint-fix": "^1.1.0"
    },
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.1",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "dts-bundle-generator": "^3.3.1",
        "eslint": "^6.8.0",
        "eslint-plugin-es": "^2.0.0",
        "execa": "^4.0.0",
        "fast-glob": "^3.2.2",
        "fs-jetpack": "^2.1.0",
        "jest": "^25.1.0",
        "keysim": "^2.0.0",
        "oldowan": "^1.0.0-preview-2",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.3"
    }
}
