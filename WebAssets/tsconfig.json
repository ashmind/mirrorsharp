{
    "include": [
        "build.ts",
        "build/*.ts"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "importsNotUsedAsValues": "error",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}